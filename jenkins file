pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'nodejs'
    }

    environment {
        SCANNER_HOME = tool 'mysonar'
    }

    stages {

        stage("Clean Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout Code") {
            steps {
                git branch: 'main', url: "https://github.com/chaithanya33/docker-project.git"
            }
        }

        stage("CQA") {
            steps {
                withSonarQubeEnv('mysonar') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectName=zomato \
                        -Dsonar.projectKey=zomato \
                        -Dsonar.sources=.
                    """
                }
            }
        }

        stage("Build") {
            steps {
                sh 'npm install'
            }
        }

        stage('Snyk Security Scan') {
            steps {
                snykSecurity failOnIssues: false, snykInstallation: 'snyk', snykTokenId: 'snyk'
            }
        }

        stage("Trivy FileSystem Scan") {
            steps {
                sh '''
                    docker run --rm -v $PWD:/scan aquasec/trivy fs /scan
                '''
            }
        }

        stage("DockerImageBuild") {
            steps {
                sh "docker build -t chaithanya2/zomato:project ."
            }
        }

        stage("Trivy Image Scan") {
            steps {
                sh '''
                    docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy image chaithanya2/zomato:project
                '''
            }
        }

        stage("DockerImagePush") {
            steps {
                script { 
                    withDockerRegistry(credentialsId: 'ddd') {
                        sh 'docker push chaithanya2/zomato:project'
                    }
                }
            }
        }

        stage("Container") {
            steps {
                sh '''
                    docker rm -f cont1 || true
                    docker run -d --name cont1 -p 3000:3000 chaithanya2/zomato:project
                '''
            }
        }

    }

    post {
        success {
            echo "Pipeline Successful"
        }
        
        failure {
            echo "Pipeline Failed. Please check the console output."
        }
        
        always {
            echo "Pipeline Finished"
        }
    }
}
